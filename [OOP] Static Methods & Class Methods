class dog:
    dogs = []
    
    def __init__(self,name):
        self.name = name
        #append the class object 
        self.dogs.append(self)
    
    @classmethod
    def num_dogs(cls):
        return len(cls.dogs)
        
    @staticmethod
    def bark(n):
        for i in range(n):
            print("Bark!")
            
tim = dog("Tim")
            
            
